<link rel="stylesheet" href="/css/home.css">

<div class="main-container">
    <div class="add-new">
        <a href="/project"><span><i style="font-size: 1.5rem;" class="fa-solid fa-plus"></i></span></a>
        <p>Create Project</p>
    </div>

    <%for(let project of projects){%>
        <div class="project">
            <p><%= project.name%></p>
            <a style="text-decoration: none; position: absolute; bottom: 2rem;" href="/project/<%=project._id%>">View</a>
        </div>

    <%} %>

</div>
